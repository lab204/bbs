defaults: &defaults

development:
  <<: *defaults
  sessions:
    default:
      hosts:
        - db
      database: ruby_china_dev

test:
  <<: *defaults
  sessions:
    default:
      hosts:
        - db
      database: ruby_china_test

# set these environment variables on your prod server
production:
  <<: *defaults
  sessions:
    default:
      hosts:
        - db
      database: ruby_china
      options:
        pool_size: 64
